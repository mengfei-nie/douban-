.common-list {
    margin-top: 40rpx;
    width: 100%;
    height: 380rpx;
    background: #fff;
    display: flex;
    flex-direction: column;
}

text {
    padding-left: 10rpx;
    font-size: 12px;
}
.scroll-container {
    /*height: 100%;*/
    flex-grow: 1;
}
.flex {
    width: 1800rpx;
    height: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
}
.flex navigator {
    width: 180rpx;
    padding: 10rpx;
    box-sizing: border-box;
}

.list-item {
    width: 100%;
    /*height: 250rpx;*/
    display: flex;
    flex-direction: column;
    text-align: center;
}
.list-item text{
    padding-top: 6px;
    padding-bottom: 6px;
    width: 100%;
    font-size: 11px;
    text-align: center;
    overflow: hidden;
}
.item-image {
    width: 160rpx;
    height: 250rpx;
}